template(name='nogApiKeys')
  .row
    .col-md-12
      span.help-block.
        Secret keys will be downloaded immediately and cannot be displayed
        again later.
  .row
    .col-md-2
      p
        button.js-create-apikey.btn.btn-default(type='button') Create Key
    .col-md-10
      each keys
        +nogApiKey
      else
        .row
          .col-md-12
            span no keys

template(name='nogApiKey')
  .row
    .col-md-4
      p
        if isDeleting
          .btn-group
            button.js-delete-apikey-cancel.btn.btn-primary(type='button') Cancel
            button.js-delete-apikey-confirm.btn.btn-danger(type='button') Delete
        else
          button.js-delete-apikey-start.btn.btn-danger(type='button')
            span.glyphicon.glyphicon-minus
        code #{keyid}
    .col-md-8
      p Created on #{createDate}. #{comment}
